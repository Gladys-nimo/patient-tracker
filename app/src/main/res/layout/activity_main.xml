<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/images"
    tools:context=".ui.MainActivity">
<!--    <include-->
<!--        android:id="@+id/toolbar"-->
<!--        layout="@layout/toolbar" />-->


    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/alike"
        android:text="Patient Tracker"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_below="@id/appNameTextView"
        android:layout_marginLeft="35dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#8BFFFFFf">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:paddingTop="10dp"
            android:text="Patient tracker is an online Application. \n Aids its user to search for clinics.\n It displays clinics in a certain location.\n  \n It also shows you the best hospital to visit with the condition you are suffering from.\n this application will help many nations across Kenya and Africa as well."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"

        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"


        android:layout_below="@+id/cardView"
        app:cardBackgroundColor="#8BFFFFFf"
        app:cardCornerRadius="20sp">

        <ImageView
            android:id="@+id/image2View"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/hospital" />

    </androidx.cardview.widget.CardView>


    <Button
            android:id="@+id/findClinicsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="138dp"
            android:background="@color/blue_200"
            android:text="Find Clinics"
            android:textColor="@color/black"
            android:visibility="visible" />

        <Button

            android:id="@+id/savedClinicsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="54dp"
            android:background="@color/blue_200"
            android:text="Saved clinics"
            android:textColor="@color/black"
            android:visibility="visible" />



</RelativeLayout>


